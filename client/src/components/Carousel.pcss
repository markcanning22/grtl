.carousel {
    height: 400px;
    position: relative;
    display: flex;
    align-items: center;

    & .carousel__image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    & .carousel__description {
        position: absolute;
        bottom: 0;
        background-color: rgba(34, 34, 34, 0.5);
        width: 100%;
        color: #fff;
        text-align: center;

        > span {
            padding: 10px;
            display: inline-block;
        }
    }
}